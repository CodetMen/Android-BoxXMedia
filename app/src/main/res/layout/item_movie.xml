<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/four_dp"
    android:paddingEnd="@dimen/four_dp">

    <ImageView
        android:id="@+id/iv_imgMovie"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/images" />

    <TextView
        android:id="@+id/tv_titleMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="@dimen/eight_dp"
        android:textColor="@color/textClr"
        android:text="THIS IS AVENGERS"
        android:layout_toEndOf="@id/iv_imgMovie"
        android:layout_centerVertical="true"/>

</RelativeLayout>